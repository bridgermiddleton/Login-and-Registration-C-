@model User;
<div class="container">
            <a href="/login">Login</a>
            <h2>Register</h2>
            <form asp-action="Register" asp-controller="Home" method="POST">
                <div class="row">
                    <div class="col-3 form-group">
                        <span asp-validation-for="FirstName"></span>
                        First Name<input class="form-control" asp-for="FirstName">
                        <span asp-validation-for="LastName"></span>
                        Last Name<input class="form-control" asp-for="LastName">
                        <span asp-validation-for="Email"></span>
                        Email<input class="form-control" asp-for="Email">
                        <button style="margin-top: 20px;" class="btn btn-success" type="submit">Sign Up Now</button>
                    </div>
                    <div class="col-3 form-group">
                        <span asp-validation-for="Password"></span>
                        Password<input class="form-control" asp-for="Password">
                        <span asp-validation-for="Confirm"></span>
                        Password Confirmation<input class="form-control" asp-for="Confirm">
                        
                    </div>
                </div>
            </form>
       
    
</div>